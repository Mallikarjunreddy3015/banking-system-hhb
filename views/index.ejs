<%layout('templ')%>

<style>
.spn{
  margin-left: 30%;
  font-family:'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
  font-weight: 800;
}
</style>
<link href="../public/styles1.css" rel="stylesheet">
  <h1 class="display-2" >Welcome to Helping Hands Bank</h1>

  <span class = "spn" style="font-size: 2rem;">Click to view...<span class="fa fa-arrow-circle-right" style="font-size:48px; color:red"></span class></span></span>

  <button id ='malli' onclick=" displayer()" type="button" class="btn btn-success">OUR CUSTOMERS</button>
   <DIV id ='view'style = "display:none;">
    <table class="table">
      <thead class="h2">
        <tr>
          <th scope="col">Name</th>
          <th scope="col">AccountNumber</th>
        </tr>
      </thead>
      <tbody>
        <ol>
          <% for(let cust of customer) { %>
            <tr>
              <td>  <li><a href= "/customers/<%= cust._id %>" >   <%=cust.name%></a> </li></td>
              <td>  <%=cust.accountNumber%></td>
            </tr>

            <%}%>
         <ol> 
        
      </tbody>
    </table> 
   
</DIV>
  
    <h2>
     “Service to humanity is service to God.”
    </h2>

    
  <script>
    function displayer() {
      document.getElementById("view").style.display = "inline";
    }
    </script>
